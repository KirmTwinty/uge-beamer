\definecolor{pale}{RGB}{255, 255, 240}
\definecolor{dark}{HTML}{23373b}

\providebool{reversedColor}
\boolfalse{reversedColor}

%% Redefine the white color as pale in the metroset call.
\makeatletter
\renewcommand{\metropolis@colors@dark}{%
	\setbeamercolor{normal text}{%
		fg=pale,
		bg=dark
	}%
	\usebeamercolor[fg]{normal text}%
	\booltrue{reversedColor}%
}
\renewcommand{\metropolis@colors@light}{%
	\setbeamercolor{normal text}{%
		fg=dark,
		bg=pale
	}%
	\usebeamercolor[fg]{normal text}%
	\boolfalse{reversedColor}%
}
\metropolis@colors@light % set to default !
\makeatother


